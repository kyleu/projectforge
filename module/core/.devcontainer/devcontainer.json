{
	"name": "{{{ .Title }}} Dev Container",
	"image": "mcr.microsoft.com/devcontainers/go:1-1.24-bookworm",
	"features": {
		"ghcr.io/devcontainers/features/go:1": {
			"version": "1.24"
		},
		"ghcr.io/guiyomh/features/golangci-lint:0": {
			"version": "2.2.2"
		}
	},
	"forwardPorts": [
		{{{ .Port }}}{{{$inc := .}}}{{{ range $k, $v := .PortOffsets }}},
		{{{ $inc.PortIncremented $v }}}{{{ end }}}
	],
	"remoteUser": "vscode"
}
