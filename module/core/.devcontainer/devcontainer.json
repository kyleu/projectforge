{
	"name": "{{{ .Title }}} Dev Container",
	"image": "mcr.microsoft.com/devcontainers/go:2.0.3-1.25-bookworm",
	"features": {
		"ghcr.io/devcontainers/features/go:1": {
			"version": "{{{ .GoMajorVersionSafe }}}"
		},
		"ghcr.io/guiyomh/features/golangci-lint:0": {
			"version": "2.2.2"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"golang.go"
			]
		}
	},
	"onCreateCommand": "bin/bootstrap.sh",
	"forwardPorts": [
		{{{ .Port }}}{{{$inc := .}}}{{{ range $k, $v := .AdditionalPortList }}},
		{{{ $inc.PortIncremented $v }}}{{{ end }}}
	],
	"remoteUser": "vscode"
}
