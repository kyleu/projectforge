{
  "configurations": [
    {
      "mode": "local",
      "name": "Attach to Project Forge",
      "processId": "projectforge",
      "request": "attach",
      "substitutePath": [
        {
          "from": "${workspaceFolder}/views",
          "to": "views"
        }
      ],
      "type": "go"
    },
    {
      "mode": "auto",
      "name": "Start Project Forge",
      "program": "main.go",
      "request": "launch",
      "substitutePath": [
        {
          "from": "${workspaceFolder}/views",
          "to": "views"
        }
      ],
      "type": "go"
    },
    {
      "args": [
        "upgrade"
      ],
      "mode": "auto",
      "name": "Upgrade Project Forge",
      "program": "main.go",
      "request": "launch",
      "substitutePath": [
        {
          "from": "${workspaceFolder}/views",
          "to": "views"
        }
      ],
      "type": "go"
    },
    {
      "mode": "auto",
      "name": "Debug file",
      "program": "${file}",
      "request": "launch",
      "type": "go"
    }
  ],
  "version": "0.2.0"
}